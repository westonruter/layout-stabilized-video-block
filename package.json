{
	"name": "layout-stabilized-video-block",
	"author": "Weston Ruter",
	"license": "GPL-2.0-or-later",
	"prettier": "@wordpress/prettier-config",
	"homepage": "https://github.com/westonruter/layout-stabilized-video-block",
	"repository": "https://github.com/westonruter/layout-stabilized-video-block",
	"bugs": "https://github.com/westonruter/layout-stabilized-video-block/issues",
	"devDependencies": {
		"@wordpress/scripts": "*",
		"husky": "^9",
		"lint-staged": "^16",
		"typescript": "^5"
	},
	"scripts": {
		"check-engines": "wp-scripts check-engines",
		"format": "wp-scripts format \"./**/*.{js,jsx,ts,tsx,mjs,json,yml}\" && wp-scripts lint-js \"./**/*.{js,jsx,ts,tsx,mjs}\" --fix && composer phpcbf && composer normalize",
		"lint": "tsc && npm run lint:js \"./**/*.{js,jsx,ts,tsx,mjs}\" && composer phpstan && composer phpcs && composer normalize --dry-run",
		"lint:js": "wp-scripts lint-js",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "git archive --format=zip --output=layout-stabilized-video-block.zip HEAD",
		"prepare": "husky"
	}
}
